{
  "title": "Github Status Checker",
  "id": "github-status-checker@jetpack",
  "version": "0.5.0",
  "description": "Displays an icon showing the state of Github in colors: green, yellow or red.",
  "main": "index.js",
  "author": "Matias Agustin Mendez",
  "engines": {
    "firefox": ">=33.0a1",
    "fennec": ">=33.0a1"
  },
  "license": "MPL 2.0",
  "preferences": [
    {
      "name": "checkInterval",
      "title": "Checking interval",
      "description": "Check api.github.com every N minutes",
      "type": "integer",
      "value": 5
    },
    {
        "name": "guiMode",
        "type": "menulist",
        "title": "Large or Compact",
        "description": "Display mode: large (label + icon) or compact (only icon)",
        "value": "compact",
        "options": [
            {
                "value": "compact",
                "label": "Compact"
            },
            {
                "value": "large",
                "label": "Large"
            }
        ]
    }
  ]
}
